# ---------------------------------------------------------
# Core Application
# ---------------------------------------------------------
ENV=local
LOG_LEVEL=INFO
APP_NAME=virtus-ai

# ---------------------------------------------------------
# API Server
# ---------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# ---------------------------------------------------------
# Strava Integration (Read-only)
# ---------------------------------------------------------
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_REDIRECT_URI=http://localhost:8000/auth/strava/callback

# ---------------------------------------------------------
# Garmin Integration (Phase 2)
# ---------------------------------------------------------
GARMIN_CLIENT_ID=
GARMIN_CLIENT_SECRET=

# ---------------------------------------------------------
# LLM Providers
# ---------------------------------------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

LITELLM_PROVIDER=openai

# ---------------------------------------------------------
# Storage
# ---------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# ---------------------------------------------------------
# Scheduling
# ---------------------------------------------------------
DAILY_BRIEF_HOUR=6
DAILY_BRIEF_TIMEZONE=America/Chicago

# ---------------------------------------------------------
# Safety / Limits
# ---------------------------------------------------------
MAX_DAILY_TOKENS=20000
MAX_DECISIONS_PER_DAY=5

# ---------------------------------------------------------
# Feature Flags (Garmin-First Strategy)
# ---------------------------------------------------------
# Strava integration disabled for Garmin-first strategy
STRAVA_ENABLED=false

# Garmin is the primary integration
GARMIN_ENABLED=true
GARMIN_WEBHOOKS_ENABLED=true
GARMIN_BACKFILL_DAYS=90
