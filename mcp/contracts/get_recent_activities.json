{
  "name": "get_recent_activities",
  "description": "Get recent activities for a user within a specified number of days, ordered by start_time (most recent first).",
  "input_schema": {
    "user_id": "string",
    "days": "integer"
  },
  "output_schema": {
    "activities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "athlete_id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          },
          "duration_seconds": {
            "type": "integer"
          },
          "distance_meters": {
            "type": "number"
          },
          "elevation_gain_meters": {
            "type": "number"
          }
        },
        "required": ["id", "user_id", "athlete_id", "start_time"]
      }
    }
  },
  "error_cases": [
    {
      "code": "USER_NOT_FOUND",
      "description": "User ID does not exist in the database."
    },
    {
      "code": "DB_ERROR",
      "description": "Database query failed."
    },
    {
      "code": "INVALID_DAYS",
      "description": "Days must be a positive integer."
    }
  ]
}
